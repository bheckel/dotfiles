SELECT CURRENT_TIMESTAMP

-- Only on one table (Oracle v8 can't use JOIN ON syntax!)
select a.numb, b.numb from tmp1 a LEFT JOIN tmp2 b on a.numb=b.numb where b.numb IS NULL

