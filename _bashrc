###    VXFER=$u/temp/.vimxfer
###  else
###    VXFER=$HOME/tmp/.vimxfer
###  fi
###  #                                                                           only absolute paths                          comment out for fc                    uncomment out for doubleclick
###  history | grep -i "$1" | sed 's/#\+//' | grep 'cd ' | awk '{print $2, $3}' | grep '^cd [~/\$]' | tail -50 | sort | uniq | sed 's/^/#/' >| $VXFER | cat $VXFER | sed 's/^#//' ; echo "   note: $VXFER loaded"
###}


# For PS1
parse_git_dirty() {
  [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit, working directory clean" ]] && echo "*"
}
parse_git_branch() {
  # Assumes  export GIT_DISCOVERY_ACROSS_FILESYSTEM=1  to avoid slowness on network drives
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/[\1$(parse_git_dirty)]/"
}


# Search ~/code
loc() {
  # Assumes  /bin/updatedb --localpaths="$HOME/code" --prunepaths="$HOME/code/misccode/.git" --output='/var/lib/locatedb.code'
	# has been run recently.
  local cmd='locate --ignore-case --database=/var/lib/locatedb.code'
  local foundnothing="nothing found in $2 ($cmd $1)"
  local foundatleast1=
  local grepme=

  if [ -z "$1" ];then
		echo '.bashrc: Use locate(1) to find items in ~/code'
		echo '         Optionally search by section.  Optionally edit all results.'
    echo 'usage: loc searchstr [(p)erl | (s)as | (o)ther code | (v)im] [(v)im edit]'
  elif [ -z "$2" -a -z "$3" ];then
    $cmd "$1"
  elif [ -z "$3" ];then
    # Same lettering convention as my 'gone' utility
    if [ "$2" = p ];then
      grepme=perl
    elif [ "$2" = s ];then
      grepme=sas
    elif [ "$2" = o ];then
      grepme=misccode
    else
      grepme=$2
    fi
    foundatleast1=$($cmd "$1" | grep $grepme)
    if [ ! -z "$foundatleast1" ]; then
      $cmd "$1" | grep $grepme
    else
      echo $foundnothing
    fi
  else
    if [ "$2" = p ];then
      grepme=perl
    elif [ "$2" = s ];then
      grepme=sas
    elif [ "$2" = o ];then
      grepme=misccode
    else
      grepme=$2
    fi
    foundatleast1=$($cmd "$1" | grep $grepme)
    if [ ! -z "$foundatleast1" ]; then
      $EDITOR -p `$cmd "$1" | grep $grepme`
    else
      echo $foundnothing
    fi
  fi
}


function urlencode() { echo -n $@ | perl -pe's/([^-_.~A-Za-z0-9])/sprintf("%%%02X", ord($1))/seg'; }
function google() { w3m http://www.google.com/search?hl=en#q="`urlencode $@`" ;}


# Git Log
# TODO fix "[main] -bash 40036 sig_send: error sending signal -66 to pid 40036, pipe handle 0x84, Win32 error 0"
function gl() {
  # e.g. gl mybranch 20
	local branch=$1
  test  "x$branch" = "x" && branch='CURRENT BRANCH'
  local days=$2
  test  "x$days" = "x" && days=10
  git log --pretty=format:"%Cblue%h %ar |%Cgreen %s%Cblue %d [%an]" \
	        --graph \
					--date=short $1 \
					|sed "s/^\* //g" \
					|head -n$days; \
					echo -n; echo; echo "${fg_darkgray} ...displaying last $days $branch";
}

