# Debug from CMD w/o sourcing this file:
# c:\cygwin\bin\rxvt.exe -geometry 80x40+250+175 -fn "Andale Mono-12" -e /bin/bash --norc
case "$OSTYPE" in
  CYGWIN*|cygwin*)
    ###if [ -z $NONINTERACTIVE ]; then
      ###case "$HOSTNAME" in
        ###'ZEBWL06A16349' | 'sati' ) if test -e $HOME/bin/ck4blink; then $HOME/bin/blink& fi
      ###esac
    ###fi

    #-------------------
    # Export Cygwin  #{{{2
    #-------------------
    # For drives not mounted by Cygwin.  Allows easier completion e.g. $ cd $c/temp/foo<TAB>
    export a=/cygdrive/a
    export c=/cygdrive/c
    export d=/cygdrive/d
    export e=/cygdrive/e
    export f=/cygdrive/f
    export g=/cygdrive/g
    export h=/cygdrive/h
    export m=/cygdrive/m
    export u=/cygdrive/u
    export x=/cygdrive/x
    export y=/cygdrive/y
