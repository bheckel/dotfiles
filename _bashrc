# Avoid garbage on the command line.   .vimrc has a similar function.
# E.g. run prior to doing a $ su foouser
fix() {
  unset PROMPT_COMMAND
  unset PS1
  export PS1='\u@\h\$ '  # generic
  export TERM=vt100  # guessing that we're coming in via telnet
}


