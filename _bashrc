# Build a fast, disposable sandbox for testing
sbx() {
  # Leading epoch date is for sorting purposes.  To navigate do something like:
  # cd ~/tmp/*09Jun*
  todayuniq=`date +%s_%d%b%y`$1
  mkdir $HOME/tmp/$todayuniq
  cd $HOME/tmp/$todayuniq
}


lt() {
  if test "x$1" = "x"; then
    \ls -lt | head -n25
  else
    \ls -lt "$1" | head -n25
  fi
}


