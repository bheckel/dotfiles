        alias dropbox='~/.dropbox-dist/dropboxd &'
        alias vi='vim -u ~/code/misccode/_vimrc'
      fi

      shopt -s cdspell checkhash checkwinsize cmdhist dotglob histappend 

      stty erase ^? intr ^C kill ^K
  ;; # end linux

