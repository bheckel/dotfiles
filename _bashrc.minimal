set -o vi
shopt -s histappend
alias ..='cd ..'
alias by=exit
alias h='history|tail -n20'
alias ll='ls -l'
alias lt='ls -ltF | head -n20'
alias vi=vim
HISTSIZE=10000
HISTFILESIZE=10000
HISTIGNORE='f:fg:l:ls:la:cd:h:ll::d:by:&'
HISTCONTROL=ignoredups:erasedups
HISTTIMEFORMAT='%F %T '
TERM=xterm-256color
